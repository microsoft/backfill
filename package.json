{
  "private": true,
  "name": "backfill-repo",
  "license": "MIT",
  "version": "2.0.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "yarn update-project-references && lerna run --stream prepare",
    "lerna": "lerna",
    "test": "lerna run test",
    "prettier": "prettier \"{.,**}/*.{tsx,ts,js,json,md,yaml}\" --write",
    "update-project-references": "node tools/update-project-references.js",
    "watch": "lerna run watch --parallel"
  },
  "dependencies": {
    "lerna": "3.18.3",
    "prettier": "1.18.2",
    "typescript": "3.6.4"
  },
  "devDependencies": {
    "execa": "^3.1.0",
    "husky": "^3.0.4",
    "lint-staged": "^9.2.5",
    "lodash.merge": "^4.6.2",
    "prettier-package-json": "^2.1.0",
    "resolve-from": "^5.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn update-project-references && lint-staged"
    }
  },
  "lint-staged": {
    "package.json": [
      "prettier-package-json --write",
      "prettier --write",
      "git add"
    ],
    "**/*.{ts,js,json,md,yaml}": [
      "prettier --write",
      "git add"
    ]
  }
}
