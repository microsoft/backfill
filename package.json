{
  "private": true,
  "name": "backfill-repo",
  "license": "MIT",
  "version": "2.0.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "lerna run --stream prepare",
    "lerna": "lerna",
    "test": "lerna run --stream test",
    "prettier": "prettier \"{.,**}/*.{tsx,ts,js,json,md,yaml}\" --write",
    "watch": "lerna run watch --parallel"
  },
  "dependencies": {
    "lerna": "3.16.4",
    "prettier": "1.18.2",
    "typescript": "3.5.3"
  },
  "devDependencies": {
    "husky": "^3.0.4",
    "lint-staged": "^9.2.5",
    "prettier-package-json": "^2.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "package.json": [
      "prettier-package-json --write",
      "prettier --write",
      "git add"
    ],
    "**/*.{js,json,md,yaml}": [
      "prettier --write",
      "git add"
    ]
  }
}
