{
  "private": true,
  "name": "backfill-repo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/microsoft/backfill"
  },
  "version": "2.0.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run --stream build",
    "change": "beachball change",
    "checkchange": "beachball check",
    "format": "prettier --write .",
    "postinstall": "yarn update-project-references",
    "lerna": "lerna",
    "lint": "eslint --fix . --ext .ts",
    "prepare": "husky install",
    "prepublishOnly": "eslint . --ext .ts && lerna run build && lerna run test",
    "release": "beachball publish",
    "syncpack:check": "syncpack list-mismatches",
    "syncpack:fix": "syncpack fix-mismatches",
    "test": "lerna run test",
    "update-project-references": "node tools/update-project-references.js",
    "watch": "lerna run watch --parallel"
  },
  "dependencies": {
    "lerna": "3.22.1",
    "prettier": "2.7.1",
    "typescript": "4.1.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "5.27.1",
    "@typescript-eslint/parser": "5.27.1",
    "beachball": "2.30.1",
    "eslint": "8.17.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.0.0",
    "execa": "4.0.2",
    "husky": "7.0.4",
    "lint-staged": "12.5.0",
    "lodash.merge": "4.6.2",
    "prettier-package-json": "2.1.3",
    "resolve-from": "5.0.0",
    "syncpack": "8.2.4"
  },
  "beachball": {
    "scope": [
      "!packages/utils-test/__fixtures__/*"
    ]
  },
  "lint-staged": {
    "**/package.json": [
      "prettier-package-json --write",
      "prettier --write"
    ],
    "**/*.{js,json,md,yaml}": [
      "prettier --write"
    ],
    "**/*.ts": [
      "eslint --fix"
    ]
  },
  "resolutions": {
    "**/cache-base/union-value/set-value": "^2.0.0"
  },
  "syncpack": {
    "peer": false,
    "workspace": false,
    "versionGroups": [
      {
        "dependencies": [
          "execa"
        ],
        "packages": [
          "backfill-repo"
        ]
      }
    ]
  }
}
