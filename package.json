{
  "private": true,
  "name": "backfill-repo",
  "license": "MIT",
  "version": "2.0.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run --stream build",
    "postinstall": "yarn update-project-references",
    "lerna": "lerna",
    "lint": "eslint --fix . --ext .ts",
    "prepublishOnly": "eslint . --ext .ts && -lerna run build && lerna run test",
    "test": "lerna run test",
    "prettier": "prettier \"{.,**}/*.{tsx,ts,js,json,md,yaml}\" --write",
    "update-project-references": "node tools/update-project-references.js",
    "watch": "lerna run watch --parallel"
  },
  "dependencies": {
    "lerna": "3.20.2",
    "prettier": "1.19.1",
    "typescript": "3.7.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "execa": "^4.0.0",
    "husky": "^4.2.0",
    "lint-staged": "^9.2.5",
    "lodash.merge": "^4.6.2",
    "prettier-package-json": "^2.1.0",
    "resolve-from": "^5.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn update-project-references && lint-staged"
    }
  },
  "lint-staged": {
    "package.json": [
      "prettier-package-json --write",
      "prettier --write",
      "git add"
    ],
    "**/*.{ts,js,json,md,yaml}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{ts}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "resolutions": {
    "**/cache-base/union-value/set-value": "^2.0.0"
  }
}
